# Environment Configuration for Real Estate AI Agent System
# Copy this file to .env and fill in your actual values

# =============================================================================
# API Configuration
# =============================================================================

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_API_VERSION=2024-01-01

# Anthropic API Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_API_BASE=https://api.anthropic.com

# LangChain Configuration
LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_API_KEY=your_langchain_api_key_here
LANGCHAIN_PROJECT=real-estate-agents

# =============================================================================
# Database Configuration
# =============================================================================

# PostgreSQL Database
DATABASE_URL=postgresql://username:password@localhost:5432/realestate_db
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30

# Redis Configuration (for caching and message queuing)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0

# =============================================================================
# Agent Configuration
# =============================================================================

# Maximum number of concurrent agents
MAX_CONCURRENT_AGENTS=10

# Default agent timeout (seconds)
AGENT_TIMEOUT=300

# Agent health check interval (seconds)
AGENT_HEALTH_CHECK_INTERVAL=30

# Maximum retry attempts for failed operations
MAX_RETRY_ATTEMPTS=3

# =============================================================================
# System Configuration
# =============================================================================

# System timeout (seconds)
SYSTEM_TIMEOUT=600

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path
LOG_FILE=logs/app.log

# Maximum log file size (MB)
LOG_MAX_SIZE=100

# Number of log files to keep
LOG_BACKUP_COUNT=5

# =============================================================================
# Security Configuration
# =============================================================================

# Secret key for JWT tokens
SECRET_KEY=your_secret_key_here_make_it_long_and_random

# JWT token expiration time (hours)
JWT_EXPIRATION_HOURS=24

# Password hashing rounds
PASSWORD_HASH_ROUNDS=12

# Rate limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST_SIZE=200

# =============================================================================
# External Service Configuration
# =============================================================================

# Real Estate APIs
ZILLOW_API_KEY=your_zillow_api_key_here
REDFIN_API_KEY=your_redfin_api_key_here
REALTOR_API_KEY=your_realtor_api_key_here

# MLS System Access
MLS_USERNAME=your_mls_username_here
MLS_PASSWORD=your_mls_password_here
MLS_ENDPOINT=https://mls.example.com/api

# Title Company API
TITLE_COMPANY_API_KEY=your_title_company_api_key_here
TITLE_COMPANY_ENDPOINT=https://title.example.com/api

# =============================================================================
# Monitoring and Analytics
# =============================================================================

# Prometheus Metrics
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Sentry Error Tracking
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENVIRONMENT=development

# Application Insights
APPINSIGHTS_INSTRUMENTATION_KEY=your_appinsights_key_here

# =============================================================================
# Development and Testing
# =============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Debug mode
DEBUG=true

# Test database URL
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/realestate_test

# Mock external services for testing
MOCK_EXTERNAL_SERVICES=false

# =============================================================================
# Performance Configuration
# =============================================================================

# Cache TTL (seconds)
CACHE_TTL=3600

# Worker processes
WORKER_PROCESSES=4

# Async worker concurrency
ASYNC_WORKER_CONCURRENCY=100

# =============================================================================
# File Storage Configuration
# =============================================================================

# Document storage path
DOCUMENT_STORAGE_PATH=./storage/documents

# Maximum file upload size (MB)
MAX_FILE_SIZE=50

# Allowed file types
ALLOWED_FILE_TYPES=pdf,docx,txt,jpg,png

# =============================================================================
# Email Configuration
# =============================================================================

# SMTP Server
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here

# Email sender
EMAIL_FROM=noreply@realestate-agents.com
EMAIL_REPLY_TO=support@realestate-agents.com

# =============================================================================
# Webhook Configuration
# =============================================================================

# Webhook secret for external integrations
WEBHOOK_SECRET=your_webhook_secret_here

# Webhook timeout (seconds)
WEBHOOK_TIMEOUT=30

# Maximum webhook retries
WEBHOOK_MAX_RETRIES=3
